<Window x:Class="Fight_For_Daedwin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fight_For_Daedwin"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid ShowGridLines="True">
        <Border HorizontalAlignment="Left" VerticalAlignment="Top"  BorderBrush="Black" BorderThickness="2" Margin="10,10,0,0" Width="1252" Height="315"  >
            <Grid Name ="Shop" HorizontalAlignment="Left" Height="298" Margin="1,1,1,0" VerticalAlignment="Top" Width="1252" ShowGridLines="True" Visibility="Hidden">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ListBox Name ="FirstSlot"  HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="392">

                </ListBox>
                <ListBox x:Name ="SecondSlot"  HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="392" Grid.Column="1">

                </ListBox>
                <ListBox x:Name ="ThirdSlot"  HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="393" Grid.Column="2">

                </ListBox>
                <Button Name="BuyFirstSlot" Content="Купить" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Width="100" Height="41" Click="BuyFirstSlot_Click_1"/>
                <Button Name="BuySecondSlot" Content="Купить" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Width="100" Height="41" Grid.Column="1" Click="BuySecondSlot_Click"/>
                <Button Name="BuyThirdSlot" Content="Купить" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Width="100" Height="41" Grid.Column="2" Click="BuyThirdSlot_Click"/>
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top"  BorderBrush="Black" BorderThickness="2" Height="310" Margin="289,370,0,0" Width="694">
            <Grid HorizontalAlignment="Left" Height="306" Margin="1,1,1,1" VerticalAlignment="Top" Width="687">
                <Button x:Name="StartFightButton" Content="Начать бой" HorizontalAlignment="Left" Margin="10,255,0,0" VerticalAlignment="Top" Width="95" Height="40" Click="Button_Click"/>
                <Label x:Name="MoneyTitle" Content="Валюта: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="36" Width="53" />
                <Label x:Name="MoneyCounter"  Content="0"  HorizontalAlignment="Left" Margin="68,10,0,0" VerticalAlignment="Top" Height="36" Width="37"  />
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="150" Margin="115,5,0,0" VerticalAlignment="Top" Width="572">
                    <Grid HorizontalAlignment="Left" Height="146" Margin="-1,1,-1,0" VerticalAlignment="Top" Width="572" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </Border>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="143" Margin="115,160,0,0" VerticalAlignment="Top" Width="572">
                    <Grid HorizontalAlignment="Left" Height="139" Margin="1,1,-1,0" VerticalAlignment="Top" Width="570" ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <ListBox Name="PlayerCrew1" HorizontalAlignment="Left" Height="139" VerticalAlignment="Top" Width="114">

                        </ListBox>
                        <ListBox x:Name="PlayerCrew3" HorizontalAlignment="Left" Height="139" VerticalAlignment="Top" Width="114" Grid.Column="2"/>
                        <ListBox x:Name="PlayerCrew2" HorizontalAlignment="Left" Height="139" VerticalAlignment="Top" Width="113" Grid.Column="1" Margin="1,0,0,0"/>
                        <ListBox x:Name="PlayerCrew5" HorizontalAlignment="Left" Height="139" VerticalAlignment="Top" Width="114" Grid.Column="4"/>
                        <ListBox x:Name="PlayerCrew4" HorizontalAlignment="Left" Height="139" VerticalAlignment="Top" Width="113" Grid.Column="3" Margin="1,0,0,0"/>
                    </Grid>
                </Border>
                <Button x:Name="RestartButton" Content="Обновить (2)" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="95" Click="RestartButton_Click" Height="40" RenderTransformOrigin="0.47,3.95"/>
                <Button x:Name="NextStageButton" Content="Далее" HorizontalAlignment="Left" Margin="10,210,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="0.493,0.55" Height="40" Click="NextStageButton_Click"/>
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top"  BorderBrush="Black" BorderThickness="2" Margin="10,370,0,0" Height="310" >
            <Grid HorizontalAlignment="Left" Height="305" Margin="1,1,1,1" VerticalAlignment="Top" Width="270">
                <Button x:Name="StartButton" Content="Начать" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="250" Height="40" Click="Button_Click"/>
                <ScrollViewer x:Name="GameLogParent" HorizontalAlignment="Left" Height="240" Margin="10,55,0,0" VerticalAlignment="Top" Width="250" Visibility="Hidden">
                    <TextBlock x:Name="GameLog" TextWrapping="Wrap" Text=""/>
                </ScrollViewer>
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top"  BorderBrush="Black" BorderThickness="2" Margin="988,370,0,0" Height="310" Width="274">
            <Grid HorizontalAlignment="Left" Height="304" Margin="1,1,1,1" VerticalAlignment="Top" Width="270" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Name="UseItem1" Content="Применить" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="70"/>
                <Button Name="UseItem2" Content="Применить" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="70" Grid.Column="1"/>
                <Button Name="UseItem3" Content="Применить" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="70" Grid.Column="2"/>
                <Button Name="UseItem4" Content="Применить" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="70" Grid.Row="1"/>
                <Button Name="UseItem5" Content="Применить" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="70" Grid.Column="1" Grid.Row="1"/>
                <Button Name="UseItem6" Content="Применить" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="70" Grid.Column="2" Grid.Row="1"/>
            </Grid>
        </Border>
    </Grid>
</Window>
