<Window x:Class="Fight_For_Daedwin.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fight_For_Daedwin"
        mc:Ignorable="d"
        ResizeMode="NoResize" Height="450" Width="550">
    <Grid>
        <TextBox Name="PlayerNameBox" HorizontalAlignment="Left" Height="23" Margin="10,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,42,0,0" TextWrapping="Wrap" Text="Имя игрока" VerticalAlignment="Top"/>
        <Button Name="ApplySettings" Content="Применить" HorizontalAlignment="Left" Margin="10,347,0,0" VerticalAlignment="Top" Width="120" Height="30" Click="ApplySettings_Click"/>
        <Button Name="CloseSettings" Content="Закрыть" HorizontalAlignment="Right" Margin="0,347,15,0" VerticalAlignment="Top" Width="120" Height="30" Click="CloseSettings_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Настройки" VerticalAlignment="Top"/>

    </Grid>
</Window>
